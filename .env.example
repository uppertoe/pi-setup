# =====================================
# General Settings
# =====================================
DOMAIN=yourdomain.com                # Your primary domain name
TZ=America/New_York                  # Timezone (e.g., America/New_York)

# =====================================
# Caddy Settings
# =====================================
CADDY_EMAIL=your-email@domain.com    # Email for Caddy’s Let's Encrypt registration

# =====================================
# Pi-hole Settings
# =====================================
PIHOLE_WEBPASSWORD=your_secure_password  # Password for Pi-hole’s admin interface
PIHOLE_LOCAL_IPV4=192.168.4.48           # Static internal IP for Pi-hole container

# =====================================
# Home Assistant Settings
# =====================================
HOMEASSISTANT_USERNAME=your_username      # Username for Home Assistant
HOMEASSISTANT_PASSWORD=your_secure_password  # Password for Home Assistant

# =====================================
# WireGuard VPN Settings
# =====================================
WIREGUARD_SERVERURL=yourdomain.com        # Your domain or dynamic DNS hostname
WIREGUARD_SERVERPORT=51820                # Port for WireGuard VPN
WIREGUARD_PEERS=1                         # Number of WireGuard VPN clients
WIREGUARD_PEERDNS=pihole                   # DNS server for VPN peers
WIREGUARD_NETWORK=10.0.0.0/24             # WireGuard VPN network range (must match docker-compose.yml)

# =====================================
# Calibre Settings
# =====================================
CALIBRE_USERNAME=your_calibre_username    # Username for Calibre-Web
CALIBRE_PASSWORD=your_calibre_password    # Password for Calibre-Web interface

# =====================================
# Static Site Settings
# =====================================
STATIC_SITE_SUBDOMAIN=static          # Subdomain for your static site (e.g., static_site.yourdomain.com)
STATIC_SITE_USERNAME=your_static_username
STATIC_SITE_PASSWORD=your_static_password

# =====================================
# Docker User Settings
# =====================================
PUID=1000                                 # User ID for Docker containers
PGID=1000                                 # Group ID for Docker containers

# =====================================
# Optional: Additional Service Settings
# =====================================
# Add any other environment variables needed for future services here
